            android:text="-" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/button19"
            style="@style/calculator_button"
            android:text="0" />

        <Button
            android:id="@+id/button18"
            style="@style/calculator_button"
